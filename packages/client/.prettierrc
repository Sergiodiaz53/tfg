{
    "printWidth": 100,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "overrides": [
        {
            "files": "*.scss",
            "options": {
                "singleQuote": false
            }
        },
        {
            "files": "*.json",
            "options": {
                "trailingComma": "all"
            }
        },
        {
            "files": "package.json",
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
